ruta xampp: /opt/lampp
iniciar xampp: sudo /opt/lampp/lampp start
parara xampp: sudo /opt/lampp/lampp stop
iniciar panel: cd /opt/lampp
sudo ./manager-linux-x64.run

consola mysql: sudo /opt/lampp/lampp startmysql
abrir consola: /opt/lampp/bin/mysql -u root
para servicio de base de datos: sudo /opt/lampp/lampp stopmysql

// BASE DE DATOS SIMPLE //

CREATE DATABASE mydb;
USE mydb;
CREATE TABLE mitabla ( id INT PRIMARY KEY, nombre VARCHAR(20) );
INSERT INTO mitabla VALUES ( 1, 'Will' );
INSERT INTO mitabla VALUES ( 2, 'Marry' );
INSERT INTO mitabla VALUES ( 3, 'Dean' );
SELECT id, nombre FROM mitabla WHERE id = 1;
UPDATE mitabla SET nombre = 'Willy' WHERE id = 1;
SELECT id, nombre FROM mitabla;
DELETE FROM mitabla WHERE id = 1;
SELECT id, nombre FROM mitabla;
DROP DATABASE mydb;
SELECT count(1) from mitabla; da el nÃºmero de registros en la tabla

